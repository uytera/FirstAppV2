        <ImageView
            android:id="@+id/imageView"
            android:layout_width="47dp"
            android:layout_height="47dp"
            android:layout_marginStart="52dp"
            android:layout_marginTop="157dp"
            android:layout_marginEnd="5dp"
            app:layout_constraintEnd_toStartOf="@+id/nomen"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/topText"
            app:srcCompat="@drawable/ic_location_city_24px" />

        <ImageView
            android:id="@+id/sun_anim"
            android:layout_width="96dp"
            android:layout_height="87dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="27dp"
            android:src="@drawable/ic_wb_sunny_24px"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/night_anim"
            android:layout_width="96dp"
            android:layout_height="87dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/ic_nights_stay_24px"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

